@{
  Layout = "_Layout";
}
@using Salon.Models;
@using System.Collections.Generic;
@model List<Salon.Models.Stylist>;

<br>
<h4>Search Results</h4>
@if (Model.Count == 0)
{
  <p> No stylists match this search </p>
}
else
{
  <ul>
    @foreach (Stylist stylist in Model)
    {
      <span>@Html.ActionLink($"{stylist.Name}", "Name", new { id = stylist.StylistId })</span>
    }
  </ul>
}
